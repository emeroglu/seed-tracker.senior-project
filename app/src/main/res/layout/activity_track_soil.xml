<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_track_soil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    tools:context="com.selimsivaci.seedtracker.TrackSoil">

    <ImageView
        android:id="@+id/track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="17"
        app:srcCompat="@drawable/track"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bluetooth: "
            android:textColor="@color/Black"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/waterlevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Water Level: "
            android:textColor="@color/Black"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pumplevel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Water Pump Power Percentage"
            android:textColor="@color/Black" />


        <SeekBar
            android:id="@+id/seekBarMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1565C0" />

        <TextView
            android:id="@+id/number"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/Black" />


        <ImageButton
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fff"
            app:srcCompat="@drawable/apply" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/setmoisturelevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="#fff"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/setmoisturelevel"

        />


</LinearLayout>
