<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_moisture_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.selimsivaci.seedtracker.MoistureLevel">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ekran3"
        android:id="@+id/image_yesilyaprak" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBluetooth2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bluetooth: "
            android:textColor="@color/Black"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moisturelevel"
            android:text="Moisture Level: "
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:gravity="center">

        </TextView>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        app:srcCompat="@drawable/ekran3_2"
        android:id="@+id/image_mavidamla" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#1565C0"
        android:id="@+id/seekBar"/>

    <TextView
        android:text="TextView"
        android:textColor="@color/Black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/number" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:background="#fff"
        android:paddingBottom="40dp"
        app:srcCompat="@drawable/apply"
        android:id="@+id/apply" />


</LinearLayout>
